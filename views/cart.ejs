
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->

<main>
  <div class="wrapper">
    <h1>Cart</h1>
      <ul class="cart-list">
        <% for (let i = 0; i < cart.length; i++) { %>
          <li class="cart-item" onclick="window.location.href='/item/' + '<%= cart[i].id %>'">
              <h2><%= cart[i].name %></h2>
              <img src="<%= cart[i].image %>" alt="<%= cart[i].name %>" />
              <p><%= cart[i].description %></p>
              <p><%= cart[i].price %></p>
              <button class="remove-item" data-id="<%= cart[i].id %>" onclick="event.stopPropagation();">Remove</button>
            </div>
          </li>
        <% } %>

  </div>
</main>

<!-- /Main Site -->

<script src="/js/cart.js"></script>

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
