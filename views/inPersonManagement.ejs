<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<link rel="stylesheet" href="/css/admin.css">
<link rel="stylesheet" href="/css/inPersonManagement.css" />

<!-- Main Site -->

<main>
  <div class="wrapper">
    <h1>In-Person Store Management</h1>
    
    <div class="overflow-wrapper">
      <table id="inventory-table">
        <% items.forEach(function(item) { %>
        <th colspan = 10>
          <b> <%= item.name %> </b>
        </th>
        <tr>
          <% for (let size in item.sizes) { %>
            <% const selectorStr = item.name + '\\' + size; %>
            <th>
              <% if (size != "placeholder") { %>
                <%= size + ": " %>
              <% } %>
              <%= item.sizes[size] %>
              <br>
              <input type="button" class="mod-stock sub-stock" id="sub\<%= selectorStr %>" value="-">
              <input type="button" class="mod-stock add-stock" id="add\<%= selectorStr %>" value="+">
            </th>
          <% } %>
        </tr>
        <% }) %>
      </table>
    </div>
  </div>
</main>

<script src="/js/inPersonManagement.js"></script>

<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
